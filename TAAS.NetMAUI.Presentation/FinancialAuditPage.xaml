<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TAAS.NetMAUI.Presentation"                
             x:Class="TAAS.NetMAUI.Presentation.FinancialAuditPage"
             xmlns:vm="clr-namespace:TAAS.NetMAUI.Presentation.ViewModels">

    <Shell.TitleView>
        <local:ShellTitleView ViewTitle="Financial Audit Types" />
    </Shell.TitleView>

    <!-- ScrollView WITH GRID -->
    <Grid RowDefinitions="Auto,Auto,Auto,*">

        <!-- Breadcrumb -->
        <HorizontalStackLayout Grid.Row="0" Margin="10" Spacing="5">
            <Label Text="Main Page" Style="{StaticResource HmbHyperlinkStyle}">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToMainPageCommand}" />
                </Label.GestureRecognizers>
            </Label>
            <Label Text=">" />
            <Label Text="Financial Audit Types" />
        </HorizontalStackLayout>

        <!-- Selected audit -->
        <local:SelectedAuditAssignmentView Grid.Row="1" />

        <!-- Title -->
        <Label Grid.Row="2"
               Text="Financial Audit Types"
               Margin="5"/>

        <!-- COLLECTIONVIEW AREA (fills remaining space) -->
        <Border Grid.Row="3">
            <CollectionView ItemsSource="{Binding AuditTypeList}"
                            Margin="10"
                            ItemSizingStrategy="MeasureAllItems">

                <CollectionView.EmptyView>
                    <Label Text="No data to display" />
                </CollectionView.EmptyView>

                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     Span="3"
                                     VerticalItemSpacing="10"
                                     HorizontalItemSpacing="10"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Stroke="LightGray"
                                Margin="5"
                                Padding="10"
                                StrokeThickness="1">

                            <VerticalStackLayout>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Code: " FontAttributes="Bold" />
                                            <Span Text="{Binding Code}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label>
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Description: " FontAttributes="Bold" />
                                            <Span Text="{Binding Description}" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <HorizontalStackLayout Margin="10">
                                    <Button Text="Show Detail"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:FinancialAuditViewModel}}, Path=ShowChecklistsCommand}"
                                            CommandParameter="{Binding .}" 
                                            Style="{StaticResource BorderButtonStyle}"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </Border>

    </Grid>
</ContentPage>