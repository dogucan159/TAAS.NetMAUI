<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TAAS.NetMAUI.Presentation.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout  Padding="30" Spacing="15">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" />

        <Entry Placeholder="Identification Number" Text="{Binding IdentificationNumber}" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />

        <Button Text="Login" Command="{Binding LoginCommand}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />

    </VerticalStackLayout>
</ContentPage>